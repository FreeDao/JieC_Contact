                <ImageButton 
                    android:id="@+id/ib_phone_chat_3"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ib_phone_call_3"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/sym_action_call"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_yd_phone_1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_yd_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="移动号码1:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_yd_phone_num_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_toRightOf="@+id/tv_yd_phone_1"/>
                
                <ImageButton 
                    android:id="@+id/ib_yd_phone_call_1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/sym_action_chat"/>
                
                <ImageButton 
                    android:id="@+id/ib_yd_phone_chat_1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ib_yd_phone_call_1"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/sym_action_call"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_yd_phone_2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_yd_phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="移动号码2:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_yd_phone_num_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_toRightOf="@+id/tv_yd_phone_2"/>
                
                <ImageButton 
                    android:id="@+id/ib_yd_phone_call_2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/sym_action_chat"/>
                
                <ImageButton 
                    android:id="@+id/ib_yd_phone_chat_2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ib_yd_phone_call_2"
